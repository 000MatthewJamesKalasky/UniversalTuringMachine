<Application x:Class="UniversalTM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UniversalTM"
             StartupUri="MainWindow.xaml"
             ShutdownMode="OnMainWindowClose"
    xmlns:System="clr-namespace:System;assembly=System.Runtime">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="Themes\Main Theme.xaml"/>
                

            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="simTMRes">Consolas</FontFamily>
            <FontFamily x:Key="ExecFontRes">Segoe UI</FontFamily>
            <FontFamily x:Key="TapeFontRes">Consolas</FontFamily>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
